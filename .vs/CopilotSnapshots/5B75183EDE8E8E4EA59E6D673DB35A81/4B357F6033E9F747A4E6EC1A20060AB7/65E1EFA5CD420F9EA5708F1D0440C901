using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.EntityFrameworkCore;
using MaintenanceScheduler.Domain.Entities;
using MaintenanceScheduler.Domain.Interfaces;
using MaintenanceScheduler.Infrastructure.Data;

namespace MaintenanceScheduler.Infrastructure.Repositories
{
    public class WarrantyInfoRepository : IWarrantyInfoRepository
    {
        private readonly MaintenanceDbContext _context;

        public WarrantyInfoRepository(MaintenanceDbContext context)
        {
            _context = context ?? throw new ArgumentNullException(nameof(context));
        }

        public async Task<WarrantyInfo> GetByIdAsync(Guid id)
        {
            var result = await _context.WarrantyInfos.FindAsync(id);
            if (result == null)
                throw new InvalidOperationException($"WarrantyInfo with Id '{id}' not found.");
            return result;
        }

        public async Task<WarrantyInfo> GetByAssetIdAsync(Guid assetId)
        {
            var result = await _context.WarrantyInfos
                .Where(w => w.AssetId == assetId && w.IsActive)
                .OrderByDescending(w => w.ExpiryDate)
                .FirstOrDefaultAsync();

            if (result == null)
                throw new InvalidOperationException($"WarrantyInfo for AssetId '{assetId}' not found.");

            return result;
        }
        public async Task<IEnumerable<WarrantyInfo>> GetExpiringWarrantiesAsync(int days)
        {
            var startDate = DateTime.UtcNow;
            var endDate = startDate.AddDays(days);

            return await _context.WarrantyInfos
                .Where(w => w.IsActive &&
                           w.ExpiryDate >= startDate &&
                           w.ExpiryDate <= endDate)
                .OrderBy(w => w.ExpiryDate)
                .ToListAsync();
        }

        public async Task<IEnumerable<WarrantyInfo>> GetActiveWarrantiesAsync()
        {
            return await _context.WarrantyInfos
                .Where(w => w.IsActive && w.ExpiryDate >= DateTime.UtcNow)
                .OrderBy(w => w.ExpiryDate)
                .ToListAsync();
        }

        public async Task<WarrantyInfo> AddAsync(WarrantyInfo warranty)
        {
            if (warranty == null)
                throw new ArgumentNullException(nameof(warranty));

            warranty.Id = Guid.NewGuid();
            warranty.CreatedAt = DateTime.UtcNow;
            warranty.IsActive = true;

            await _context.WarrantyInfos.AddAsync(warranty);
            return warranty;
        }

        public async Task<WarrantyInfo> UpdateAsync(WarrantyInfo warranty)
        {
            if (warranty == null)
                throw new ArgumentNullException(nameof(warranty));

            warranty.UpdatedAt = DateTime.UtcNow;
            _context.WarrantyInfos.Update(warranty);
            return await Task.FromResult(warranty);
        }

        public async Task<bool> DeleteAsync(Guid id)
        {
            var warranty = await _context.WarrantyInfos.FindAsync(id);
            if (warranty == null)
                return false;

            _context.WarrantyInfos.Remove(warranty);
            return true;
        }
    }
}
