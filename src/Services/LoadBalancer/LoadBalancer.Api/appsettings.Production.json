{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "asset-registry": {
        "ClusterId": "asset-registry",
        "Match": { "Path": "/assetregistry/{**catch-all}" },
        "Transforms": [ 
          { "PathPattern": "/assetregistry/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      },
      "audit-compliance": {
        "ClusterId": "audit-compliance",
        "Match": { "Path": "/audit/{**catch-all}" },
        "Transforms": [ 
          { "PathPattern": "/audit/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      },
      "identity-access": {
        "ClusterId": "identity-access",
        "Match": { "Path": "/identity/{**catch-all}" },
        "Transforms": [ 
          { "PathPattern": "/identity/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      },
      "maintenance-scheduler": {
        "ClusterId": "maintenance-scheduler",
        "Match": { "Path": "/maintenance/{**catch-all}" },
        "Transforms": [ 
          { "PathPattern": "/maintenance/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      },
      "notification": {
        "ClusterId": "notification",
