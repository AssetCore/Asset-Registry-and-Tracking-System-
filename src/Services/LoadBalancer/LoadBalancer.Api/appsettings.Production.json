        "Transforms": [ 
          { "PathPattern": "/notification/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      },
      "apigateway": {
        "ClusterId": "apigateway",
        "Match": { "Path": "/api/{**catch-all}" },
        "Transforms": [ 
          { "PathPattern": "/api/{**catch-all}" },
          { "RequestHeader": "X-Forwarded-Host", "Set": "{header:host}" }
        ]
      }
    },
    "Clusters": {
      "asset-registry": {
        "Destinations": {
          "istio-gateway": { 
            "Address": "http://your-istio-nlb-internal-dns.elb.us-east-1.amazonaws.com",
            "Health": "http://your-istio-nlb-internal-dns.elb.us-east-1.amazonaws.com:15021/healthz/ready"
          }
        },
