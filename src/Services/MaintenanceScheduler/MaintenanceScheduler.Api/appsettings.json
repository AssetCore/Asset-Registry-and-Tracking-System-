{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MaintenanceSchedulerDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "NotificationService": {
    "BaseUrl": "https://localhost:7002",
    "Enabled": true
  },
  "BackgroundServices": {
    "MaintenanceReminder": {
      "CheckIntervalHours": 6,
      "ReminderDaysAhead": 3
    },
    "WarrantyExpiryReminder": {
      "CheckIntervalHours": 24,
      "ReminderDaysAhead": 30
    }
  },
  "OpenSearch": {
    "Uri": "https://localhost:9200",
    "Username": "",
    "Password": "",
    "IndexFormat": "maintenance-scheduler-{0:yyyy.MM.dd}",
    "Enabled": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}